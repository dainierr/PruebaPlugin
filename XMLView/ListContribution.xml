<view>
    <columns>
        <column name="code" order="100">
            <widget type="text" fieldname="id"/>            
        </column>
        <column name="registration" order="110">
            <widget type="date" fieldname="registration" />
        </column>
        <column name="amount" order="120">
            <widget type="money" fieldname="amount" atrib="money"/>
        </column> 
        <column name="tithetype" order="130">
            <widget type="select" fieldname="tithetype" translate="true">                
                <values title="tithe">1</values>
                <values title="offering">2</values>
                <values title="specialdonation">3</values>                    
            </widget>
        </column> 
        <column name="tithename" order="140">
                <widget type="text" fieldname="tithename"/>
        </column>
        <column name="paymentmethod" order="150">
            <widget type="select" fieldname="paymentmethod" translate="true">                
                    <values title="cash">1</values>
                    <values title="transfer">2</values>
                    <values title="card">3</values>                    
                </widget>
        </column> 
         <column name="members" title="donor" order="160">
            <widget type="text" fieldname="member"/>    
        </column>
        <column name="fiscal-number" order="160">
            <widget type="text" fieldname="cifnif"/>    
        </column>

    </columns>


</view>